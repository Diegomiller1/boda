<!-- =====================================================
     JAVASCRIPT
===================================================== -->
<script>
  // =====================================================
  // TODO: Verificar la hora exacta de inicio con los novios
  const WEDDING_DATE = new Date('2026-09-05T12:30:00');
  // =====================================================

  /* ----- Countdown timer ----- */
  function tick() {
    const diff = WEDDING_DATE - new Date();
    if (diff <= 0) {
      document.getElementById('countdown').innerHTML =
        '<p style="font-family:var(--font-serif);font-size:1.6rem;font-style:italic">¬°Hoy es el gran d√≠a! üéâ</p>';
      return;
    }
    const d = Math.floor(diff / 864e5);
    const h = Math.floor((diff % 864e5) / 36e5);
    const m = Math.floor((diff % 36e5) / 6e4);
    const s = Math.floor((diff % 6e4) / 1e3);
    document.getElementById('cdDays').textContent  = String(d).padStart(2,'0');
    document.getElementById('cdHours').textContent = String(h).padStart(2,'0');
    document.getElementById('cdMins').textContent  = String(m).padStart(2,'0');
    document.getElementById('cdSecs').textContent  = String(s).padStart(2,'0');
  }
  tick();
  setInterval(tick, 1000);

  /* ----- Sticky nav ----- */
  const nav = document.getElementById('mainNav');
  window.addEventListener('scroll', () => {
    nav.classList.toggle('scrolled', window.scrollY > 60);
  }, { passive: true });

  /* ----- Parallax hero ----- */
  const heroBg = document.getElementById('heroBg');
  window.addEventListener('scroll', () => {
    if (window.scrollY < window.innerHeight)
      heroBg.style.transform = `translateY(${window.scrollY * 0.25}px)`;
  }, { passive: true });

  /* ----- Mobile nav toggle ----- */
  function toggleNav() {
    document.getElementById('navLinks').classList.toggle('open');
  }
  // Close nav on link click
  document.querySelectorAll('.nav-links a').forEach(a => {
    a.addEventListener('click', () => {
      document.getElementById('navLinks').classList.remove('open');
    });
  });

  /* ----- Fade-in on scroll ----- */
  const io = new IntersectionObserver((entries) => {
    entries.forEach((e, i) => {
      if (e.isIntersecting) {
        setTimeout(() => e.target.classList.add('visible'), i * 80);
        io.unobserve(e.target);
      }
    });
  }, { threshold: 0.12 });
  document.querySelectorAll('.fi').forEach(el => io.observe(el));

  /* ----- Carousel ----- */
  const totalSlides = document.querySelectorAll('.c-slide').length;
  const cTrack     = document.getElementById('carouselTrack');
  const cDotsWrap  = document.getElementById('cDots');
  let cCurrent     = 0;
  let cPer         = window.innerWidth < 900 ? 1 : 3;
  let cTimer;

  // Build dots
  function buildDots() {
    cDotsWrap.innerHTML = '';
    const count = totalSlides - cPer + 1;
    for (let i = 0; i < count; i++) {
      const btn = document.createElement('button');
      btn.className = 'c-dot' + (i === 0 ? ' active' : '');
      btn.setAttribute('aria-label', `Slide ${i + 1}`);
      btn.onclick = () => { cCurrent = i; render(); };
      cDotsWrap.appendChild(btn);
    }
  }

  function render() {
    const pct = 100 / cPer;
    cTrack.style.transform = `translateX(-${cCurrent * pct}%)`;
    document.querySelectorAll('.c-dot').forEach((d, i) =>
      d.classList.toggle('active', i === cCurrent));
  }

  function moveCarousel(dir) {
    const max = totalSlides - cPer;
    cCurrent = Math.max(0, Math.min(cCurrent + dir, max));
    render();
  }

  function startAuto() {
    cTimer = setInterval(() => {
      const max = totalSlides - cPer;
      cCurrent = cCurrent >= max ? 0 : cCurrent + 1;
      render();
    }, 3500);
  }
  function pauseCarousel()  { clearInterval(cTimer); }
  function resumeCarousel() { startAuto(); }

  buildDots(); startAuto();

  window.addEventListener('resize', () => {
    cPer = window.innerWidth < 900 ? 1 : 3;
    cCurrent = 0;
    buildDots(); render();
  });

  // Touch swipe
  let tX = 0;
  cTrack.addEventListener('touchstart', e => { tX = e.touches[0].clientX; }, { passive: true });
  cTrack.addEventListener('touchend',   e => {
    const d = tX - e.changedTouches[0].clientX;
    if (Math.abs(d) > 50) moveCarousel(d > 0 ? 1 : -1);
  });

  /* ----- RSVP radio buttons ----- */
  function pickRadio(val) {
    document.querySelectorAll('.r-label').forEach(l => l.classList.remove('picked'));
    document.getElementById('rl-' + val).classList.add('picked');
    document.querySelector(`.r-label[id="rl-${val}"] input`).checked = true;
  }

  /* ----- RSVP form submit ----- */
  function handleRSVP(e) {
    e.preventDefault();
    // TODO: Replace with your form handler (Formspree, EmailJS, your own API, etc.)
    // Example with Formspree: add action="https://formspree.io/f/YOUR_ID" method="POST" to <form>
    document.getElementById('rsvpForm').style.display    = 'none';
    document.getElementById('formSuccess').style.display = 'block';
  }
</script>

</body>
</html>


